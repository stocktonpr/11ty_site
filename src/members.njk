<div id="password-protection" class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
    <h2 class="text-2xl font-bold mb-4 text-center">Members Area</h2>
    <p class="mb-4 text-gray-600 text-center">Please enter the password to access member content</p>
    <div class="space-y-4">
      <input type="password" id="password-input" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter password">
      <button onclick="checkPassword()" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-150">Access Content</button>
    </div>
  </div>
</div>

<div id="protected-content" class="max-w-6xl mx-auto px-4 py-12 hidden">
  <h1 class="text-4xl font-bold mb-8">Welcome to the Members Area</h1>
  <div class="prose prose-lg max-w-none">
    <p>This is your exclusive members-only content.</p>
    <!-- Add your protected content here -->
  </div>
</div>

<script>
function checkPassword() {
  const password = document.getElementById('password-input').value;
  if (password === '6817') {
    document.getElementById('password-protection').classList.add('hidden');
    document.getElementById('protected-content').classList.remove('hidden');
    // Store in session storage so it persists during the session
    sessionStorage.setItem('memberAccess', 'granted');
  } else {
    alert('Incorrect password. Please try again.');
  }
}

// Check if already authenticated in this session
if (sessionStorage.getItem('memberAccess') === 'granted') {
  document.getElementById('password-protection').classList.add('hidden');
  document.getElementById('protected-content').classList.remove('hidden');
}
</script> 