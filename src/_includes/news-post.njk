---
layout: layouts/base
---

<article class="max-w-4xl mx-auto">
  <div class="bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-lg p-8 mb-8 shadow-lg">
    <h1 class="text-4xl font-bold mb-4">{{ title }}</h1>
    <div class="flex items-center text-blue-100">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <time datetime="{{ page.date | dateIso }}" class="text-lg">{{ page.date | dateDisplay }}</time>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="prose prose-lg max-w-none">
      {{ content | safe }}
    </div>

    <div class="mt-8 pt-8 border-t border-gray-200">
      <a href="/news" class="inline-flex items-center text-blue-600 hover:text-blue-700">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to News
      </a>
    </div>
  </div>
</article> 